\noindent
\begin{tabular}{|l|}
    \hline
    \textbf{ODE} \\ \hline
    $\frac{d}{dt} V_{os} = - L_p\cdot A \cdot \left(\Pi_t + \Pi_e - \Pi_i\right)$ \\ \hline
    $\frac{d}{dt} V_{b} = 0.2 \cdot V_{ref}$ \\ \hline
    $\frac{d}{dt} V = \dot{V_{os}} + \dot{V_{b}}$ \\ \hline
    $\frac{d}{dt} V_{ref} = \frac{\Phi\cdot r}{d\cdot f\left(\Pi_t\right)}\cdot V_{ref}$\\ \hline
    $\frac{d}{dt} \Pi_t = \frac{E\cdot 2 d}{r}\cdot \frac{\dot{V}}{V_{ref}} - E\cdot\Phi\cdot f\left(\Pi_t\right) - \frac{\Pi_t}{V}\cdot \dot{V}$\\ \hline
    $\frac{d}{dt} c_i = k_{uptake}\cdot \frac{A}{V} - k_{cons} - \frac{c_i}{V}\cdot \dot{V}$\\ \hline
\end{tabular}
\newline
\newline
\noindent
\begin{tabular}{|l|}
    \hline 
    $f\left(\Pi_t\right) = max\left(\Pi_{tc} - \Pi_t, 0 \right)$ \\ \hline
    $A = \left(4\pi\right)^\frac{1}{3}} \cdot \left(3 V\right)^\frac{2}{3}$ \\ \hline
    $r = \left(\frac{3}{4\pi} V\right)^\frac{1}{3}$ \\ \hline
\end{tabular}
